<h2><%= @product.title %></h2>

<% @product.attributes.each do |key, value| %>
	<div>
		<%= key %>:  <%= value %>
	</div>
<%end %>
<br>
<div class = "row">
	<div class = "col-sm-6 col-sm-offset-3">
		<h4><strong>Product's reviews</strong></h4>
		<% if @reviews.empty? %>
			<p> No reviews for this product yet!</p>
		<% else %>
			<% @reviews.each do |review| %>
				<div class="panel panel-default">
					<div class="panel-heading">
						Posted by: <%= User.find(review.user_id).name %>
						<br>
						Date: <%= review.created_at.strftime("%d/%m/%y") %>
					</div>
					<div class="panel-body">
						<%= review.description %>
					</div>
				</div>
			<% end %>
		<% end %>
		<%= render partial: 'reviews/review_form', locals: {review: @review, product: @product} %>
	</div>
</div>



<%=link_to "See other products from this user", user_path(@product.user_id) %>
