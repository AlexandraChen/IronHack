<div class="container">	
	<div class = "row">
		<div class = "col-sm-5 col-sm-offset-1">
			<h2><%= @product.title %></h2>
			<div class="well well-lg">
				<p>Description: <%= @product.description %></p>
				<p>Bidding ends at: <%= @product.bidding_deadline %></p>
				<p>From user: <%= User.find(@product.user_id).name %></p>
				<p><%= link_to 'Buy it now', products_path(@product.id), class:"btn btn-primary btn-lg" %> for <%= @product.price %> </p>
			</div>
			<%=link_to "See other products from this user", user_path(@product.user_id) %>
			<br>
		</div>
			<% if current_user %>
				<%=link_to "Delete product", [@user, @product], method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %>
				<br><br>
				<%= link_to "Go back to account", user_path(@user)  %>
			<% end  %>
		</div>
	</div>
</div>
